{% extends 'layouts/error.html.twig' %}
{% block title %}403 - Forbidden{% endblock %}

{% block body %}

<div class="error-page container">
    <div class="col-md-8 col-12 offset-md-2">
        <img class="img-error" src="{{ absolute_url(asset('build/images/errors/error-403.png')) }}" alt="Forbidden">
        <div class="text-center">
            <h1 class="error-title">Forbidden</h1>
            <p class="fs-5 text-gray-600">You are unauthorized to see this page.</p>
            <a href="{{ path('auth_login') }}" class="btn btn-lg btn-outline-primary mt-3">Go Home</a>
        </div>
    </div>
</div>

{% endblock %}
